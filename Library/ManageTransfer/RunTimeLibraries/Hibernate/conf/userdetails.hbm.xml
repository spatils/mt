<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.managetransfer.client.UserDetails" table="mtuserdetails">
      <meta attribute="class-description">
         This class contains the connection detail. 
      </meta>
       
      <id name="userId" type="string" column="user_id" length="16">
      </id>
      <property name="psw" column="psw" type="string"/>
      <property name="repository" column="repository" type="string"/>
      <property name="url" column="url" type="string"/>
   </class>
</hibernate-mapping>