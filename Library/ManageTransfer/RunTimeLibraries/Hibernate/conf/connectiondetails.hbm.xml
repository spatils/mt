<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.managetransfer.client.ConnectionDetails" table="mtconnectiondetails">
      <meta attribute="class-description">
         This class contains the connection detail. 
      </meta>
       
      <id name="connectionName" type="string" column="connection_name" length="16">
      </id>
      <property name="connectionType" column="connection_type" type="string"/>
      <property name="userName" column="user_name" type="string"/>
      <property name="userPsw" column="user_psw" type="string"/>
      <property name="dataSource" column="data_source" type="string"/>
      <property name="domain" column="domain" type="string"/>
      <property name="port" column="port" type="string"/>
      <property name="url" column="url" type="string"/>
   </class>
</hibernate-mapping>